<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="433.0" prefWidth="675.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flightprep.controller.Doctor.DocCalendarController">

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="180" spacing="10" style="-fx-background-color: #15aad0;">
            <children>
                <Button onAction="#switchToHome" styleClass="sidebar-button" text="Home">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
                <Button onAction="#switchToCalendar" style="-fx-background-color: #117fa2;" styleClass="sidebar-button" text="Calendar" />
                <Button styleClass="sidebar-button" text="Help" />
                <Region VBox.vgrow="ALWAYS" />
                <Button styleClass="sidebar-button" text="Account" />
            </children>
        </VBox>
    </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
              <ToolBar style="-fx-background-color: #ffffff; -fx-padding: 10;">
               <HBox alignment="CENTER" spacing="10">
                  <children>
                        <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Calendar" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#previousWeek" styleClass="nav-button" text="Previous Week" />
                        <Label fx:id="weekLabel" text="Current Week" />
                        <Button onAction="#nextWeek" styleClass="nav-button" text="Next Week" />
                  </children>
               </HBox>
              </ToolBar>
              <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                  <VBox fx:id="appointmentsContainer" spacing="10" style="-fx-padding: 10;">
                      <!-- Daily sections will be added here programmatically -->
                  </VBox>
              </ScrollPane>
         </children>
      </VBox>
   </center>

</BorderPane>
