<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.flightprep.controller.Customer.CustomerPrepController">
    <children>
        <VBox maxWidth="160.0" prefWidth="160.0" style="-fx-background-color: #15aad0;" HBox.hgrow="ALWAYS">
            <children>
                <Button maxHeight="55.0" maxWidth="160.0" mnemonicParsing="false" onAction="#switchToHome"
                        prefHeight="55.0" prefWidth="160.0"
                        style="-fx-background-color: #15aad0; -fx-border-color: #000000;" text="Home">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Button>
                <Button maxHeight="55.0" maxWidth="160.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="160.0"
                        style="-fx-background-color: #1086a3; -fx-border-color: #000000;" text="Preparation"/>
                <Button maxHeight="55.0" maxWidth="160.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="160.0"
                        style="-fx-background-color: #15aad0; -fx-border-color: #000000;" text="My Flight"/>
                <Button maxHeight="55.0" maxWidth="160.0" mnemonicParsing="false" onAction="#switchToCalendar"
                        prefHeight="55.0" prefWidth="160.0"
                        style="-fx-background-color: #15aad0; -fx-border-color: #000000;" text="Calendar"/>
                <Button maxHeight="55.0" maxWidth="160.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="160.0"
                        style="-fx-background-color: #15aad0; -fx-border-color: #000000;" text="Galerie"/>
                <Region VBox.vgrow="ALWAYS"/>
                <Button maxHeight="55.0" maxWidth="160.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="160.0"
                        style="-fx-background-color: #15aad0; -fx-border-color: #000000;" text="Account"/>
            </children>
        </VBox>
        <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                <ToolBar maxHeight="55.0" prefHeight="55.0" prefWidth="200.0" style="-fx-alignment: center;">
                    <items>
                        <Label prefHeight="34.0" prefWidth="162.0" text="Flight Preparation">
                            <font>
                                <Font size="19.0"/>
                            </font>
                        </Label>
                    </items>
                </ToolBar>
                <TabPane minHeight="0.0" minWidth="0.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Medical Check">
                            <content>
                                <StackPane prefWidth="Infinity" prefHeight="Infinity">
                                    <children>
                                        <VBox alignment="CENTER" spacing="20.0"
                                              style="-fx-background-color: white;
                                             -fx-background-radius: 15;
                                             -fx-border-radius: 15;
                                             -fx-padding: 40;
                                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0.5, 0, 5);">
                                            <children>
                                                <Label text="Medical Checklist"
                                                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                                                <VBox spacing="15.0" alignment="CENTER">
                                                    <children>
                                                        <CheckBox text="Fill out your Medical Data"
                                                                  style="-fx-font-size: 18px;"/>
                                                        <CheckBox text="Make an appointment with Doctor"
                                                                  style="-fx-font-size: 18px;"/>
                                                        <CheckBox text="Upload your medical certificate"
                                                                  style="-fx-font-size: 18px;"/>
                                                        <CheckBox text="Confirm Medical Check"
                                                                  style="-fx-font-size: 18px;"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </StackPane>
                            </content>
                        </Tab>
                        <Tab closable="false" text="Training"/>
                        <Tab closable="false" text="Fitting"/>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</HBox>
